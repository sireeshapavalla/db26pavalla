extends layout

block content
  h1= title
  p Bikes results
  div(class="container-fluid")
        div(class="row")
            -
                let details = results
            each c,index in details
                div(class="col-sm-2" onclick=`buy(${index})`) #{c.bName}
                div(class="col-sm-2" onclick=`buy(${index})`) #{c.bWeight}
                div(class="col-sm-2" onclick=`buy(${index})`) #{c.bCost}

                script.                
                      function buy(itemNo)
                      {
                            alert(`You purchased item ${itemNo+1}`)
                      }